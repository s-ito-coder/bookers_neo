<div class="container">
	<div class="col-xs-3">
		<%= render 'users/prof', user: @user, book: @book %>
	</div>
	<div class="col-xs-9">
		<h2>Books</h2>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
			</thead>

			<tbody>
			    <% @books.each do |bks| %>
				    <tr>
			        	<td><%= attachment_image_tag bks.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
			        	<td><%= bks.title %></td>
			        	<td><%= bks.body %></td>
				    </tr>
			    <% end %>
		    </tbody>
		</table>
	</div>
</div>