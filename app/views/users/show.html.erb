<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/prof', user: @user, book: @book %>
		</div>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>

				<tbody>
				    <% @books.each do |bks| %>
					    <tr>
				        	<td><%= link_to bks.user do %>
				        			<%= attachment_image_tag bks.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size:'40x40' %>
				        		<% end %></td>
				        	<td><%= link_to book_path(bks) do %>
				        			<%= bks.title %>
				        		<% end %></td>
				        	<td><%= bks.body %></td>
					    </tr>
				    <% end %>
			    </tbody>
			</table>
		</div>
	</div>
</div>