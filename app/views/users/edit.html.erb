<body>
<div class="body">
	<div class="container">
		<% if @user.errors.any? %>
		    <div id="error_explanation">
			    <h2><%= @user.errors.count %>errors prohibited this obj from being saved</h2>
			    <ul>
				    <% @user.errors.full_messages.each do |message| %>
					    <li><%= message %></li>
				    <% end %>
			    </ul>
		    </div>
		<% end %>

		<%= form_for(@user) do |f| %>
		<p id="notice"></p>
		<h2>User info</h2>

  <div class="field">
    <label for="user_name">Name</label>
	<%= f.text_field :name %>
  </div>

  <div class="field">
    <label for="user_image">Image</label>
	<div class="form-group has-icon">
		<label class="control-label sr-only" for="inputEmail">ProfileImage</label>
		<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    </div>

	  <div class="field">
	    <label for="user_introduction">Introduction</label>
	    <%= f.text_area :introduction, class:"form-control", placeholder:"詳細" %>
	  </div>

	  <div class="actions">
	    <input type="submit" name="commit" value="Update User" data-disable-with="Update User">
	  </div>
	<% end %>
      </div>
    </div>

    <footer>
  <div class="container">
  	<div class="row">
    	<div class="col-xs-3 col-xs-offset-9">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>
</body>