<div class="container">
	<div class="col-xs-3">
		<%= render 'users/prof', user: @user, book: @book_new %>
	</div>
	<div class="col-xs-9">
		<h2>Book detail</h2>
		<table class="table table-hover table-inverse">
			<thead>
			</thead>

			<tbody>
				    <tr>
			        	<td><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
			        	<td><%= @book.title %></td>
			        	<td><%= @book.body %></td>
			        	<td><%= link_to "edit", edit_book_path(@book), method: :edit, class: "btn btn-info" %></td>
			        	<td><%= link_to "destroy", book_path(@book), method: :delete, class: "btn btn-danger" %></td>
				    </tr>
		    </tbody>
		</table>
	</div>
</div>