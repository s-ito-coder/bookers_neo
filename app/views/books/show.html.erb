<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'users/prof', user: @user, book: @book_new %>
		</div>
		<div class="col-xs-9">
			<h2>Book detail</h2>
			<table class="table table-hover table-inverse">
				<thead>
				</thead>

				<tbody>
					    <tr>
				        	<td><%= link_to @book.user do %>
				        			<%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size:'40x40' %><br />
				        			<%= @book.user.name %>
				        		<% end %></td>
				        	<td><%= link_to book_path(@book) do %>
				        			<%= @book.title %>
				        		<% end %></td>
				        	<td><%= @book.body %></td>
				        	<td><% if @user.id == current_user.id %>
				        			<%= link_to "Edit", edit_book_path(@book), method: :edit, class: "btn btn-info" %>
				        		<% else %>
				        		<% end %></td>
				        	<td><% if @user.id == current_user.id %>
				        			<%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger", data: { confirm: '本当に削除しますか？' } %>
				        		<% else %>
				        		<% end %></td>
					    </tr>
			    </tbody>
			</table>
		</div>
	</div>
</div>