<div class="container">
	<div class="col-xs-3">
		<%= render 'users/prof', user: @user %>
	</div>
	<div class="col-xs-9">
		<h2>Books</h2>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>　</th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
			</thead>
			<tbody>
				<tr>
			        <% @books.each do |books| %>
			        	<td></td><!-- <td>ここにプロフィールイメージ</td> -->
			        	<td><%= books.title %></td>
			        	<td><%= books.body %></td>
			        <% end %>
			    </tr>
		    </tbody>
		</table>
	</div>
</div>